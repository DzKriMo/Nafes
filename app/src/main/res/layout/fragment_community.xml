<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommunityFragment"
    android:background="#E0ECDE"
    >
    <TextView
        android:id="@+id/textViewCommunityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Nafes Community"
        android:fontFamily="@font/abeezee"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#393939"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCommunitySlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/abeezee"
        android:textColor="#393939"
        android:text="Share Your Nafes Experience"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewCommunityTitle" />

    <EditText
        android:id="@+id/editTextPost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="10dp"
        android:textColorHint="#A0000E08"
        android:hint="Type your testimony here"
        app:layout_constraintEnd_toStartOf="@+id/buttonSend"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/inputt"
        android:fontFamily="@font/abeezee"
        app:layout_constraintTop_toBottomOf="@id/textViewCommunitySlogan" />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abeezee"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="@id/editTextPost"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bttnn"
        android:backgroundTint="#2C6975"
        app:layout_constraintTop_toTopOf="@id/editTextPost" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPosts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextPost"
        tools:listitem="@layout/item_post"
        />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="230dp"
        android:src="@drawable/img_18"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="-10dp"
        android:layout_marginEnd="-5dp"
        android:layout_marginTop="-10dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_19"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="-10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="-40dp"
        android:layout_marginStart="-51dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_20"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="-10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="-40dp"
        android:layout_marginEnd="-51dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>