<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/postbckg"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp">

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/abeezee"
        android:textColor="#000E08"
        app:layout_constraintTop_toTopOf="parent"
        android:text="UserName"/>

    <TextView
        android:id="@+id/textViewPostedOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:fontFamily="@font/abeezee"

        app:layout_constraintStart_toStartOf="@id/textViewUsername"
        app:layout_constraintTop_toBottomOf="@id/textViewUsername"
        android:text="Posted On DD/MM/YYYY"/>

    <TextView
        android:id="@+id/textViewPostContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/abeezee"
        android:textColor="#000E08"
        app:layout_constraintTop_toBottomOf="@id/textViewPostedOn"
        android:text="The Coastal Delta of the Amur River is one of the richest ecosystems on earth"/>

</androidx.constraintlayout.widget.ConstraintLayout>
