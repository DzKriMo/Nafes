<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="#f0f0f0"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/donthave"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="80dp"
        android:elevation="15dp"
        android:background="@drawable/lbox"
        android:id="@+id/loginbox"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Register"
            android:textColor="#10406b"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/login"
            android:fontFamily="@font/louisgeorgecafe"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:layout_constraintTop_toBottomOf="@id/login"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/nameEditText"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:layout_constraintTop_toBottomOf="@id/nameEditText"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/emailEditText"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:layout_constraintTop_toBottomOf="@id/emailEditText"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/passwordEditText"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:layout_constraintTop_toBottomOf="@id/passwordEditText"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/confirmpasswordEditText"
            />

        <CheckBox
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintEnd_toEndOf="@id/passwordEditText"
            app:layout_constraintTop_toTopOf="@id/passwordEditText"
            app:layout_constraintBottom_toBottomOf="@id/passwordEditText"
            android:background="@drawable/passwordview"
            android:layout_marginEnd="15dp"
            android:id="@+id/showPassword"
            android:button="@null"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/confirmpasswordEditText"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bttn"
            android:text="Next"
            android:textColor="#f0f0f0"
            android:fontFamily="@font/louisgeorgecafe"
            android:textStyle="bold"
            android:id="@+id/loginButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:id="@+id/donthave"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textColor="#252525"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18dp"
            android:fontFamily="@font/louisgeorgecafe"
            android:textStyle="bold"
            android:id="@+id/dont"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#10406b"
            app:layout_constraintStart_toEndOf="@id/dont"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="5dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="@font/louisgeorgecafe"
            android:id="@+id/signup"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>





    <ImageView
        android:layout_width="450dp"
        android:layout_height="466dp"
        android:src="@drawable/img"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-30dp"
        android:elevation="10dp"
        android:id="@+id/imageView1"


        />
    <ImageView
        android:layout_width="450dp"
        android:layout_height="472dp"
        android:src="@drawable/img_1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-30dp"
        android:layout_marginStart="30dp"
        android:id="@+id/imageView2"
        app:layout_constraintWidth_percent="1.1"
        android:elevation="5dp"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="480dp"
        android:src="@drawable/img_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-35dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/imageView3"
        app:layout_constraintWidth_percent="1.2"

        />

</androidx.constraintlayout.widget.ConstraintLayout>